<p style="color: green"><%= notice %></p>

<% content_for :title, "Organizations" %>

<h1>Organizations</h1>

<%= link_to "New Organization", new_organization_path, class: "btn btn-primary mb-3" %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Short Name</th>
      <th>IPN</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <% if organization.user == current_user %>
        <tr>
          <td><%= organization.id %></td>
          <td><%= organization.name %></td>
          <td><%= organization.short_name %></td>
          <td><%= organization.ipn %></td>
          <td><%= organization.phone %></td>
          <td>
            <%= link_to 'Show', organization, class: "btn btn-info btn-sm" %>
            <%= link_to 'Edit', edit_organization_path(organization), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Delete', organization, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
