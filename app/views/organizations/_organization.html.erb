<style>
  .organization-card {
    background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
    border: 1px solid #4a5568;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    color: #e2e8f0;
    margin: 1.5rem 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .organization-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
    border-color: #63b3ed;
  }
  
  .org-header {
    background: linear-gradient(90deg, #4a5568 0%, #2d3748 100%);
    padding: 1.5rem;
    border-bottom: 1px solid #4a5568;
  }
  
  .org-title {
    color: #63b3ed;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }
  
  .org-subtitle {
    color: #a0aec0;
    font-size: 0.9rem;
    margin: 0.25rem 0 0 0;
    font-weight: 400;
  }
  
  .org-content {
    padding: 1.5rem;
  }
  
  .org-section {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background-color: rgba(45, 55, 72, 0.3);
    border-radius: 8px;
    border-left: 3px solid #63b3ed;
  }
  
  .org-section:last-child {
    margin-bottom: 0;
  }
  
  .section-title {
    color: #63b3ed;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .org-field {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(74, 85, 104, 0.3);
  }
  
  .org-field:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }
  
  .field-label {
    color: #a0aec0;
    font-weight: 500;
    font-size: 0.875rem;
    min-width: 120px;
    flex-shrink: 0;
  }
  
  .field-value {
    color: #e2e8f0;
    font-weight: 400;
    text-align: right;
    flex-grow: 1;
    word-break: break-word;
  }
  
  .field-value.empty {
    color: #718096;
    font-style: italic;
  }
  
  .org-badge {
    display: inline-block;
    background-color: #4a5568;
    color: #e2e8f0;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid #63b3ed;
  }
  
  @media (max-width: 768px) {
    .org-field {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    
    .field-label {
      min-width: auto;
    }
    
    .field-value {
      text-align: left;
    }
    
    .org-content {
      padding: 1rem;
    }
    
    .org-header {
      padding: 1rem;
    }
  }
</style>

