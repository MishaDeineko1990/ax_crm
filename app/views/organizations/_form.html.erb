<style>
  body {
    background-color: #1a1a1a;
    color: #e0e0e0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  
  .dark-form {
    background-color: #2d2d2d;
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    max-width: 800px;
    margin: 2rem auto;
  }
  
  .form-control {
    background-color: #3a3a3a;
    border: 1px solid #555;
    color: #e0e0e0;
    border-radius: 4px;
    padding: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .form-control:focus {
    background-color: #404040;
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    color: #e0e0e0;
  }
  
  .form-label {
    color: #b0b0b0;
    font-weight: 500;
    margin-bottom: 0.5rem;
    display: block;
  }
  
  .btn-dark-theme {
    background-color: #007bff;
    border-color: #007bff;
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .btn-dark-theme:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }
  
  .collapse-toggle {
    background-color: #495057;
    border: 1px solid #6c757d;
    color: #e0e0e0;
    padding: 0.75rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
  }
  
  .collapse-toggle:hover {
    background-color: #5a6268;
    color: #e0e0e0;
    text-decoration: none;
  }
  
  .alert-danger {
    background-color: #721c24;
    border-color: #842029;
    color: #ea868f;
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1rem;
  }
  
  .collapsible-section {
    background-color: #343a40;
    border-radius: 6px;
    padding: 1.5rem;
    margin: 1rem 0;
    border: 1px solid #495057;
  }
</style>

