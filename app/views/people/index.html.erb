<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Father name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Birth data time</th>
      <th>Note data</th>
      <th>Other data</th>
      <th>Position</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.father_name %></td>
        <td><%= person.phone_number %></td>
        <td><%= person.email %></td>
        <td><%= person.birth_data_time %></td>
        <td><%= person.note_data %></td>
        <td><%= person.other_data %></td>
        <td><%= person.position %></td>
        <td><%= person.sex %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

