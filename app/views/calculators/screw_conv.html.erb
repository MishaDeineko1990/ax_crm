function rozrahuvaty() {
  const D = konveyerData.diametrShnek / 1000; // –ø–µ—Ä–µ–≤–æ–¥–∏–º–æ –≤ –º–µ—Ç—Ä–∏
  const L = konveyerData.dovzhynaKonveyer;
  const S = konveyerData.krokShnek / 1000; // –ø–µ—Ä–µ–≤–æ–¥–∏–º–æ –≤ –º–µ—Ç—Ä–∏
  const n = konveyerData.shvydkistObertannya;
  const rho = konveyerData.gustynaMaterial;
  const psi = konveyerData.koefitsientZapovnennya;
  
  // –†–æ–∑—Ä–∞—Ö—É–Ω–æ–∫ –æ–±'—î–º—É —Ç—Ä–∞–Ω—Å–ø–æ—Ä—Ç—É–≤–∞–Ω–Ω—è (–º¬≥/–≥–æ–¥)
  const F = Math.PI * Math.pow(D, 2) / 4; // –ø–ª–æ—â–∞ –ø–µ—Ä–µ—Ä—ñ–∑—É
  konveyerData.obyemTransportuvannya = F * S * n * psi * 60;
  
  // –†–æ–∑—Ä–∞—Ö—É–Ω–æ–∫ –ø—Ä–æ–¥—É–∫—Ç–∏–≤–Ω–æ—Å—Ç—ñ (—Ç/–≥–æ–¥)
