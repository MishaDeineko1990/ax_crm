<%= form_with(model: tovar, local: true) do |form| %>
  <% if tovar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tovar.errors.count, "error") %> prohibited this tovar from being saved:</h2>
      <ul>
        <% tovar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :length %>
    <%= form.number_field :length %>
  </div>

  <div class="field">
    <%= form.label :width %>
    <%= form.number_field :width %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>

  <div class="field">
    <%= form.label :tags, "Select Tags" %><br>
    <%= form.collection_select :tag_ids, Tag.all, :id, :l1, {}, { multiple: true, size: 5 } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
